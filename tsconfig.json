{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strictBindCallApply": true,
    "newLine": "lf",
    "baseUrl": "./",
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}