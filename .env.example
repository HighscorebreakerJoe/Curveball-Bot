# Bot token of your Discord application
# Never share this token with anyone â€“ It's a secret to everybody!
BOT_TOKEN=

# Needs to match to one of the folder names in src/locale, like "en" or "de" (without quotation marks)
# English will be used as fallback, whenever a word is not available on the set language
LANGUAGE=

# Client ID of your Discord bot (from the Discord Developer Portal)
CLIENT_ID=

# ID of the Discord server (guild) where Curveball Bot will be used
GUILD_ID=

# ID of the Discord role that is allowed to configure meetups
MEETUP_CONFIGURATOR_ROLE_ID=

# Channel IDs used by Curveball Bot
# Create: where meetups can be created
MEETUP_CREATE_CHANNEL_ID=
# Info:   where meetup details are posted
MEETUP_INFO_CHANNEL_ID=
# List:   where current meetups are listed
MEETUP_LIST_CHANNEL_ID=

# Hours after a meetup ends before it can be deleted by cleanup actions
MEETUP_DELETE_LIMIT_HOURS=3

# Database configuration used by Curveball Bot
DB_HOST=
DB_PORT=
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=

# === Dev and debug settings ===

# Set to "true" (without quotation marks) to enable i18next debug mode
ENABLE_I18NEXT_DEBUG=false

# Set to "true" (without quotation marks) to disable cronjobs
# May be handy if you want to use an external cronjob service
DISABLE_CRONJOBS=false